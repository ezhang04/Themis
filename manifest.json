{
  "name": "Themis",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,

  "icons": {
    "16": "smiley.png",
    "32": "smiley.png",
    "48": "smiley.png",
    "128": "smiley.png"
  },

  "action": {
    "default_icon": "smiley.png",
    "default_popup": "hello.html",
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  },


  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
