
{
  "name": "Hello World",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "default_popup": "hello.html",
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "smiley.png",
    "default_icon": {
      "1000": "smiley.png"
    }
  }
}

  